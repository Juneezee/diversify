- content_for :title, 'Join Diversify'

.box#signup
  %h1.title.is-4.has-text-centered Create your account

  .content
    = form_with model: resource, url: registration_path(resource), html: { '@ajax:error': 'ajaxError' } do |f|
      .field
        %label.label.required Email
        .control
          = f.email_field :email, autocomplete: 'email', class: 'input', required: '', autofocus: ''
      .field
        %label.label.required Password
        .control
          = f.password_field :password, autocomplete: 'new-password', class: 'input', required: ''
          %em Minimum #{@minimum_password_length} characters

      .field
        .control
          = f.submit 'Sign up', class: 'button is-info is-fullwidth'


= render 'devise/shared/omniauth_box'

.box.callout.has-text-centered
  %p.inline Already have an account?
  = link_to 'Sign in', new_user_session_path
