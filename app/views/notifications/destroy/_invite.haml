- content_for :notification_content, flush: true do
  %div{ class: "notification_list #{ notification.unopened? ? 'unopened' : 'opened' }" }
    .notification_list_cover
    .list_image
      - if notification.notifiable.present?
        = image_tag(user_avatar(notification.notifiable))
    .list_text_wrapper
      %p.list_text
        = notification.notifiable.name
        declined invitation to join
        %strong= notification.notifier.present? ? notification.notifier.name : 'PROJECT NAME'
        %br/
        %span= notification.created_at.strftime('%b %d %H:%M')

= render partial: 'notifications/notification', locals: { notification: notification }
