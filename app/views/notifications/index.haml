- content_for :title, 'Notifications'

%section.section
  .container
    .notification_wrapper
      .notification_header
        %h1.title.is-1
          Notifications
        %p.has-text-grey
          You have
          = @not_num
          New Notifications
        - if @not_num.positive?
          = link_to open_all_notifications_path, method: :post, remote: true, class: 'button is-primary' do
            Open All Notifications
      .container
        #notification
          - if @records.blank?
            .box
              You have no notifications yet. Start using the program!
          - else
            .content
              - @records.each do |record|
                = render partial: "notifications/#{record.key}", locals: { notification: record }
            = pagy_bulma_nav(@pagy).html_safe
