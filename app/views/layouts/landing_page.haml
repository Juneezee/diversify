!!!
%html{lang: 'en'}
  %head
    = render 'layouts/head'

    = stylesheet_packs_with_chunks_tag 'landing_page'

    = javascript_include_tag '//cookieinfoscript.com/js/cookieinfo.min.js', defer: '', id: 'cookieinfo', data: {bg: '#645862', fg: '#fff', link: '#f1d600', 'close-text': 'OK'}
    = javascript_packs_with_chunks_tag 'landing_page', defer: ''

  %body.has-spaced-navbar-fixed-top
    #app
      = render 'layouts/header_nav'

      = yield

      %footer.footer
        .container
          .columns.is-mobile.is-multiline
            .column.has-text-centered
              = link_to root_path do
                = image_tag 'logo/logo_vertical.svg', width: 100
              %p
                %a.icon.is-large.brand
                  %span.iconify.facebook{'data-icon': 'brandico:facebook'}
                %a.icon.is-large.brand
                  %span.iconify{'data-icon': 'logos:twitter'}
                %a.icon.is-large.brand
                  %span.iconify.instagram{'data-icon': 'fa-brands:instagram'}
                %a.icon.is-large.brand
                  %span.iconify.linkedin{'data-icon': 'brandico:linkedin'}
              %p Copyright &copy; 2019
            .column
              %h5.title.is-5.is-spaced Products
              = link_to 'Features', features_pages_path, class: 'subtitle is-6'
              = link_to 'Pricing', pricing_pages_path, class: 'subtitle is-6'
              = link_to 'Newsletter', newsletter_pages_path, class: 'subtitle is-6'
            .column
              %h5.title.is-5.is-spaced Company
              = link_to 'About Us', about_pages_path, class: 'subtitle is-6'
              = link_to 'Customers', love_pages_path, class: 'subtitle is-6'
            .column
              %h5.title.is-5.is-spaced Support
              = link_to 'Contact Us', "#{about_pages_path}#contact", class: 'subtitle is-6'
              = link_to 'Feedback', feedback_pages_path, class: 'subtitle is-6'
