%head
  :css
    table.outer {
      padding: 2.5em 0;
    }
    table.inner {
      margin: 3rem auto;
      text-align: center;
      border-radius: 15px;
    }
    table.inner td {
      padding: 1rem;
    }
    section {
      padding: 3rem 0;
    }
    footer p {
      margin: 0;
    }
    footer p:first-of-type {
      margin-top: 1em;
    }
    footer p:first-of-type:not(:last-of-type) {
      margin-bottom: 1.5em;
    }
    footer a.icon {
      display: inline-flex;
      width: 48px;
      height: 48px;
      border: 1px solid #cbcbcb;
      border-radius: 50%;
      cursor: pointer;
    }
    footer a.icon:not(:last-of-type) {
      margin-right: 10px;
    }
    footer a.icon img {
      height: 20px;
      margin: auto;
    }

%table.outer{ width: '100%', height: '100%' }
  %tr
    %td{ width: '100%', height: '100%', bgcolor: 'gray', align: 'center' }
      %table.inner{ width: '550px', height: '100%', bgcolor: 'white' }
