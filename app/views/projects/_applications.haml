.container
  %section.settings-section
    .content
      - if @project.visibility
        - if @project.status == 'Open'
          %h1.title.is-2
            Close Application
          %p.has-text-grey All application will be turned downed if you close application
          = button_to 'Close Application', close_application_project_path(@project), remote: true, data: { confirm: 'Are you sure?' }, class: 'button is-warning', form: { '@ajax:error': 'ajaxError' }
          %h1.title.is-5
            Applications
        - elsif @project.status == 'Active'
          %h1.title.is-2
            Open Application
          %p.has-text-grey Open Project to Applications
          = button_to 'Open Applications', open_application_project_path(@project), remote: true, data: { confirm: 'Are you sure?' }, class: 'button is-danger', form: { '@ajax:error': 'ajaxError' }
      %h1.title.is-2
        Add User
      %p.has-text-grey Add User to Project
      = form_with model: Application.new, html: { '@ajax:success': 'ajaxSuccess', '@ajax:error': 'ajaxError' } do |f|
        = f.hidden_field :project_id, value: @project.id
        = f.hidden_field :application_type, value: 'invite'
        = f.collection_select :user_id, User.all, :id, :name
        = f.submit 'Send Invitation', class: 'button'

