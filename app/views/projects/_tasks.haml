.container
  %section.settings-section
    .container
      .columns.is-vcentered
        .column
          %h1.title.is-2
            Tasks
        .column
          - if !@project.completed? && (allowed_to? :create_task?, @project)
            .is-pulled-right
              .buttons.has-addons
                = link_to new_project_task_path(@project), class: 'button is-primary' do
                  %p New Task
      %task-table{ 'project-id': @project.id, 'admin': (allowed_to? :manage?, @project), 'user-id': current_user.id }


