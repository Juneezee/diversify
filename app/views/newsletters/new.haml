%h1.title Send Newsletter

= simple_form_for(@newsletter) do |f|
  .field
    = f.input :title, placeholder: 'Newsletter Title', required: true, error: 'Title is mandatory, please specify one'
  .field
    = f.cktext_area :content,required: true, placeholder: 'Type your newsletter here...', ckeditor: { uiColor: "#acacd5", toolbar: 'mini' }
  .field
    .control
      = f.button :submit, class: 'button is-primary'